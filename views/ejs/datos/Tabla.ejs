<div>
    <h2 style="color: brown;">Vista de Productos</h2>
    <% if(productos.length > 0) { %>
        <table class="table  table-dark">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">titulo</th>
                <th scope="col">precio</th>
                <th scope="col">imagen</th>
              </tr>
            </thead>
            <tbody>
                <% for(producto of productos) { %>
                    <tr>
                        <th><%= producto.id %></th>
                        <th><%= producto.titulo %></th>
                        <th><%= producto.precio %></th>
                        <th><img src="<%= producto.ruta %>" alt="" style="height: 50px; width: 50px;"></th>                        
                      </tr>
                <%} %>
             
            </tbody>
          </table>
        <%} else { %>
        <p class="alert alert-danger">No se cargo ningun producto </p>
        <%} %>

    
</div>